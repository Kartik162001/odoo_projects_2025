<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="jug_delivery_view" model="ir.ui.view">
        <field name="name">delivery.view</field>
        <field name="model">delivery</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_id"/>
                <field name="date"/>
                <field name="price"/>
                <field name="pieces"/>
            </tree>
        </field>
    </record>

    <record id="jug_view_form" model="ir.ui.view">
        <field name="name">jug.delivery.form</field>
        <field name="model">delivery</field>
        <field name="arch" type="xml">
            <form string="Delivery Delivery">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    <button name="action_send_whatsapp" type="object" string="WhatsApp" class="btn-success" icon="fa-whatsapp"/>
                    <button name="action_done" type="object" string="Done" class="btn-primary" statusbar_visible="draft,done"/>

                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id" domain="[('is_company','=',True)]"/>
                            <field name="customer_address" readonly="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="price"/>
                            <field name="pieces"/>
                        </group>
                    </group>


                    <!-- One2many lines -->
                    <notebook>
                        <page string="Delivery Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_name"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total_amount"/>
                                    <field name="line_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <group>
                        <field name="total_amount" readonly="1" string="Total" class="o_form_label o_field_right"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="jug_delivery_action" model="ir.actions.act_window">
        <field name="name">Delivery Service</field>
        <field name="res_model">delivery</field>
        <field name="view_mode">tree,form</field>
    </record>

        <record id="action_custom_module_customers" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('email','!=',False)]</field> <!-- Only customers -->
        </record>


    <menuitem id="jug_delivery"
              name="Delivery Management"
              sequence="10"/>

    <menuitem id="jug_delivery_menu"
              name="Delivery Entries"
              sequence="1"
              parent="jug_delivery"
              action="jug_delivery_action"
    />

    <menuitem id="menu_customers"
              name="Customers"
              parent="jug_delivery"
              action="action_custom_module_customers"
              sequence="2"/>

</odoo>